@model IEnumerable<AirportsAndFlights.Models.Airport>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Airports</h1>

<p>
    <a asp-action="Create">Add new Airport</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AirportName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirportCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoPassengersAnnually)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AirportName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirportCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoPassengersAnnually)
            </td>
            <td>
                <a asp-action="GetFlightsFrom" asp-route-id="@item.AirportCode">See flights from</a> |
                <a asp-action="GetFlightsTo" asp-route-id="@item.AirportCode">See flights to</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
